<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

    <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanXL="2"
        labelSpanL="2"
        labelSpanM="2"
        emptySpanXL="1"
        emptySpanL="1"
        emptySpanM="1"
        columnsXL="1"
        columnsL="1"
        columnsM="1">
        <Label
            text="{i18n>bookTitleLabel}"
            design="Bold"
            labelFor="titleField"
            vAlign="Middle" />
        <Text
            id="titleField"
            text="{title}" />
        <Label
            text="{i18n>AuthorLabel}"
            design="Bold"
            labelFor="authorField"
            vAlign="Middle" />
        <Text
            text="{author/fullName}"
            id="authorField" />
        <Label
            text="{i18n>GenreLabel}"
            design="Bold"
            labelFor="genreField"
            vAlign="Middle" />
        <Text
            text="{genre_title}"
            id="genreField" />
        <Label
            text="{i18n>StockLabel}"
            design="Bold"
            labelFor="stockField"
            vAlign="Middle" />
        <ObjectStatus
            text="{
                path : 'stock',
                formatter : '.formatter.replaceZeroValue'
            }"
            state="{
                path : 'stock',
                formatter : '.formatter.ObjectStatusFormatter'
            }" />
        <Label
            text="{i18n>PriceLabel}"
            design="Bold"
            labelFor="priceField"
            vAlign="Middle" />
        <Text
            text="{price} {currency}"
            id="priceField" />
        <Label
            text="{i18n>DescriptionLabel}"
            design="Bold"
            labelFor="descriptionField"
            vAlign="Middle" />
        <Text
            text="{descr}"
            id="descriptionField" />
        <Label
            text="{i18n>RatingLabel}"
            design="Bold"
            labelFor="ratingField"
            vAlign="Middle" />
        <RatingIndicator
            id="ratingField"
            value="{rating}"
            editable="false" />
    </form:SimpleForm>
    
</core:FragmentDefinition>