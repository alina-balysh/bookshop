<mvc:View
	controllerName="bookshop.freestyle.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
        showFooter="true">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

        <semantic:titleBreadcrumbs>
			<Breadcrumbs>
				<Link 
                    text="{i18n>worklistLinkLabel}"
                    enabled="false"/>
			</Breadcrumbs>
		</semantic:titleBreadcrumbs>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/Books',
					sorter: {
						path: 'title',
						descending: false
					},
                    parameters: {expand: 'author'}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished">

				<headerToolbar>
					<OverflowToolbar>
						<Title
							id="tableHeader"
							text="{worklistView>/worklistTableTitle}"
							level="H3"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search=".onSearch">
							<layoutData>
								<OverflowToolbarLayoutData
									maxWidth="200px"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
					</OverflowToolbar>
				</headerToolbar>

				<columns>
					<Column 
                        id="nameColumn">
						<Text 
                            text="{i18n>tableNameColumnTitle}" 
                            id="nameColumnTitle"/>
					</Column>
					<Column 
                        id="authorColumn">
                            <Text 
                                text="{i18n>tableAuthorColumnTitle}" 
                                id="authorColumnTitle"/>
					</Column>
					<Column 
                        id="genreColumn">
                        <HBox
                            alignItems="Center">
                            <Text 
                                text="{i18n>tableGenreColumnTitle}" 
                                id="genreColumnTitle"/>
                            <Button 
                                icon="sap-icon://sort"
                                type="Transparent"
                                tooltip="{i18n>sortBtnTooltip}"
                                press=".onSortPress($event, 'genre_title')" />
                        </HBox>
					</Column>
					<Column 
                        id="descriptionColumn">
						<Text 
                            text="{i18n>tableDescriptionColumnTitle}" 
                            id="descriptionColumnTitle"/>
					</Column>
					<Column 
                        id="priceColumn" 
                        hAlign="End">
                        <HBox
                            alignItems="Center">
                            <Text 
                                text="{i18n>tablePriceColumnTitle}" 
                                id="priceColumnTitle"/>
                            <Button 
                                icon="sap-icon://sort"
                                type="Transparent"
                                tooltip="{i18n>sortBtnTooltip}"
                                press=".onSortPress($event, 'price')" />
                        </HBox>
					</Column>
					<Column
                        id="stockColumn" 
                        hAlign="End"
                        width="9%">
						<Text 
                            text="{i18n>tableStockColumnTitle}" 
                            id="stockColumnTitle"/>
					</Column>
					<Column 
                        id="ratingColumn">
                        <HBox
                            alignItems="Center">
                            <Text 
                                text="{i18n>tableRatingColumnTitle}" 
                                id="ratingColumnTitle"/>
                            <Button 
                                icon="sap-icon://sort"
                                type="Transparent"
                                tooltip="{i18n>sortBtnTooltip}"
                                press=".onSortPress($event, 'rating')" />
                        </HBox>
					</Column>
					<Column
                        hAlign="End"
                        width="10%"/>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press=".onPress">
						<cells>
							<Text
								text="{title}"
								tooltip="{title}"
                                maxLines="2"/>
							<Text
								text="{author/fullName}"
                                id="authorFullName"/>
                            <Text
								text="{genre_title}"/>
							<Text
								text="{descr}"
                                tooltip="{descr}"
                                maxLines="1"/>
                            <ObjectNumber
                                number="{price}"
                                unit="{i18n>priceUnit}"/>
                            <Text
								text="{stock}"/>
                            <RatingIndicator 
                                value="{rating}"
                                editable="false" />
                            <HBox>
                                <Button
                                    icon="sap-icon://delete"
                                    type="Transparent"
                                    tooltip="{i18n>deleteBtnTooltip}"
                                    press=".onDeletePress" />
                                <ToggleButton
                                    icon="sap-icon://cart-4"
                                    type="Transparent"
                                    tooltip="{i18n>addToCartBtnTooltip}"
                                    fieldGroupIds="toggleButton"
                                    press=".onAddToCartPress" />
                            </HBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

        <semantic:titleCustomIconActions>
			<OverflowToolbarButton
                id="openCart"
                icon="sap-icon://cart"
                press=".onOpenCartPress"
                tooltip="{i18n>openCartBtnTooltip}">
                <customData>
					<BadgeCustomData
						key="{cart>/booksInCart}"
						value="{cart>/booksInCart}" />
				</customData>
            </OverflowToolbarButton>
		</semantic:titleCustomIconActions>

		<semantic:footerCustomActions>
			<Button
                press=".onOpenBookDialogPress"
                icon="sap-icon://add"
				text="{i18n>createBtnText}"/>
        </semantic:footerCustomActions>

	</semantic:SemanticPage>

</mvc:View>