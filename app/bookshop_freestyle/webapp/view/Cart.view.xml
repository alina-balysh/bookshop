<mvc:View
	controllerName="bookshop.freestyle.bookshopfreestyle.controller.Cart"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

    <Page
        title="{i18n>cartViewTitle}"
		id="page"
        showFooter="true"
        floatingFooter="false"
        backgroundDesign="Solid"
        showNavButton="true"
        class="sapUiContentPadding"
        navButtonPress=".onNavButtonPress">
        <List
            id="storesList"
            items="{cart>/cart}"
            mode="Delete"
            noDataText="{i18n>cartEmptyCartText}"
            delete=".onDeletePress">
            <CustomListItem
                highlightText="{cart>title}">
                <HBox 
                    justifyContent="SpaceBetween" 
                    alignItems="Center"
                    class="sapUiSmallMarginTop sapUiMediumMarginEnd sapUiSmallMarginBottom sapUiMediumMarginBegin">
                    <VBox>
                        <Title
                            text="{cart>title}"
                            level="H1" />
                        <ObjectAttribute 
                            text="{
                                path : 'cart>author_ID',
                                formatter : '.formatter.authorNameFormatter'
                            }" />
                        <StepInput
                            min="1"
                            max="{cart>stock}"
                            width="100px"
                            step="1"
                            textAlign="Center"
                            change=".onStepInputValueChange"
                            class="sapUiSmallMarginTop"
                            fieldGroupIds="stepInput" />
                    </VBox>
                    <VBox>
                        <ObjectNumber 
                            number="{cart>price}"
                            unit="{i18n>priceUnit}" />
                    </VBox>
                </HBox>
            </CustomListItem >
        </List>

        <footer>
            <OverflowToolbar>
                <Label 
                    text="{i18n>cartTotalPriceTitle}: "
                    class="sapUiSmallMarginBegin"/>
                <ObjectNumber 
                    number="{cart>/totalPrice}"
                    unit="{= ${cart>/booksInCart} > 0 ? ${i18n>priceUnit} : ''}" />
				<ToolbarSpacer/>
				<Button
                    text="{i18n>proceedBtnText}"
                    type="Emphasized"
                    class="sapUiSmallMarginEnd"
                    enabled="{= ${cart>/booksInCart} !== 0}"
                    press=".onOpenProceedDialogPress" />
			</OverflowToolbar>
            
        </footer>
    </Page>

</mvc:View>